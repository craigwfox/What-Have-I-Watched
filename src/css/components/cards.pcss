	&::after {
		content: '';

		display: block;

		position: absolute;
		z-index: 2;
		inset: 0;

		background: hsl(0 0% 20% / 0.8);
	}

	> div,
	> a {
		display: block;

		position: relative;
		z-index: 4;

		padding: var(--mc-pad);

		color: #fff;

		> h2 {
			margin: 0;
		}

		> ul {
			margin-block-end: 0;
			padding-inline-start: 0;

			list-style: none;
		}
	}

	> a {
		text-decoration: none;
	}
}
