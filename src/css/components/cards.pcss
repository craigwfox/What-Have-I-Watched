.movie-card {
	--mc-pad: var(--space-m);
	overflow: hidden;

	position: relative;

	background: #efefef;
	border: 0.2rem solid #333;
	border-radius: 0.5rem;

	> img {
		width: 100%;
		height: 100%;

		object-fit: cover;

		position: absolute;
		z-index: 1;
		inset: 0;
	}

	/* &::before {
